{
  "compilerOptions": {
   "outDir": "dist",
    "declaration": true,
    "emitDeclarationOnly": false,
    "declarationMap": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "allowJs": true,
    "sourceMap": true,
    "strict": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["packages"]
}